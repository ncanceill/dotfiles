#General
alias ss2="ssh -2"
alias ssx="ss2 -X"
alias ssy="ss2 -Y"
alias kint="kill -s INT"
alias rr="rm -rf"
alias xx="exit"
alias tm="top -o vsize" # memory
alias tu="top -o cpu" # cpu
alias ddig="dig +noall +answer"
alias make="nocorrect make"
alias grep="grep --color=auto"

mc () { mkdir -p $1&&cd $1 }
pg () { ps aux|grep -i $*|grep -iv GREP }

#Global
alias -g G="| grep -i"
alias -g C="| pbcopy"
alias -g V="pbpaste |"
alias -g J="| python -mjson.tool"
alias -g Q="1>/dev/null 2>/dev/null"

#Git
alias gls="git ls-tree --full-tree -r HEAD"
